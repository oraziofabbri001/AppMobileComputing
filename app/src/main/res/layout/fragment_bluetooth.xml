<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bluetooth.BluetoothFragment"
    android:id="@+id/layout_bluetooth">

    <Button
        android:textSize="11.5sp"
        android:id="@+id/buttonload_bluetooth"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/teal_700"
        android:backgroundTintMode="add"
        app:backgroundTint="@color/teal_700"
        android:text="Carica lista devices"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorLink="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:textSize="11.5sp"
        android:id="@+id/listview_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="8dp"
        android:divider="@color/black"
        android:dividerHeight="1dp"
        android:listSelector="@color/gray_light"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>